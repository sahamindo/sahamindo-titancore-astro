---
import { getCollection, type CollectionEntry } from 'astro:content';
import SEOLayout from '@layouts/SEOLayout.astro';
import { getSectorById } from '@data/categories';
import { generateArticleSEO, generateBreadcrumbJsonLd, generateFAQJsonLd } from '@utils/seo';
import { getRelatedArticles } from '@utils/search';
import Date from '@components/ui/Date.astro';
import StockSymbol from '@components/ui/StockSymbol.astro';
import NewsArticle from '@components/news/NewsArticle.astro';

export async function getStaticPaths() {
    const newsEntries = await getCollection('news', ({ data }) => {
        return import.meta.env.DEV || data.publish !== false;
    });

    return newsEntries.map(entry => ({
        params: { slug: entry.slug },
        props: { entry }
    }));
}

interface Props {
    entry: CollectionEntry<'news'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const sector = getSectorById(entry.data.category);

// Get all articles for related articles calculation
const allArticles = await getCollection('news', ({ data }) => {
    return import.meta.env.DEV || data.publish !== false;
});

// Get related articles using the search utility
const relatedArticles = getRelatedArticles(entry, allArticles, 3);

// Generate SEO metadata
const canonicalURL = new URL(`/berita/${entry.slug}`, Astro.site).toString();
const seo = generateArticleSEO(entry, canonicalURL);

// Generate additional JSON-LD
const breadcrumbJsonLd = generateBreadcrumbJsonLd([
    { name: 'Beranda', url: Astro.site!.toString() },
    { name: 'Berita', url: new URL('/berita', Astro.site).toString() },
    { name: entry.data.title, url: canonicalURL }
]);

const additionalJsonLd = [breadcrumbJsonLd];
---

<SEOLayout seo={seo} additionalJsonLd={additionalJsonLd}>
    <main>
        <article class="site-container mx-auto px-4 py-base">
            {/* Breaking news banner */}
            {entry.data.isBreaking && (
                <div class="bg-red-600 text-white px-4 py-2 rounded-lg mb-6 text-center font-bold">
                    ðŸ”´ BREAKING NEWS
                </div>
            )}

            {/* Article header */}
            <header class="max-w-4xl mx-auto mb-8">
                <div class="flex items-center gap-4 mb-4 text-sm text-gray-600">
                    {sector && (
                        <span class="flex items-center gap-2 bg-blue-100 text-blue-800 px-3 py-1 rounded-full">
                            {sector.icon} {sector.name}
                        </span>
                    )}
                    <Date date={entry.data.publishDate} />
                    <span>â€¢</span>
                    <span class="font-medium">{entry.data.author}</span>
                </div>

                <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 leading-tight">
                    {entry.data.title}
                </h1>

                <p class="text-xl text-gray-600 leading-relaxed">
                    {entry.data.excerpt}
                </p>

                {/* Stock symbols */}
                {entry.data.stockSymbols && entry.data.stockSymbols.length > 0 && (
                    <div class="mt-6 p-4 bg-gray-50 rounded-lg">
                        <h3 class="font-semibold text-gray-700 mb-3">Saham Terkait:</h3>
                        <div class="flex flex-wrap gap-2">
                            {entry.data.stockSymbols.map((symbol) => (
                                <StockSymbol symbol={symbol} inline={false} />
                            ))}
                        </div>
                    </div>
                )}
            </header>

            {/* Featured image */}
            {entry.data.featuredImage && (
                <div class="max-w-4xl mx-auto mb-8">
                    <img 
                        src={entry.data.featuredImage} 
                        alt=""
                        class="w-full h-96 object-cover rounded-lg"
                    />
                </div>
            )}

            {/* Article content */}
            <div class="max-w-4xl mx-auto prose prose-lg prose-gray">
                <Content />
            </div>

            {/* Tags */}
            {entry.data.tags && entry.data.tags.length > 0 && (
                <div class="max-w-4xl mx-auto mt-8 pt-8 border-t">
                    <h3 class="font-semibold mb-3">Tags:</h3>
                    <div class="flex flex-wrap gap-2">
                        {entry.data.tags.map((tag) => (
                            <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm">
                                #{tag}
                            </span>
                        ))}
                    </div>
                </div>
            )}
        </article>

        {/* Related articles */}
        {relatedArticles.length > 0 && (
            <section class="bg-gray-50 py-16">
                <div class="site-container mx-auto px-4">
                    <h2 class="text-3xl font-bold text-center mb-12">
                        Artikel Terkait
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        {relatedArticles.map((article) => (
                            <NewsArticle article={article} />
                        ))}
                    </div>
                    
                    <div class="text-center mt-8">
                        <a 
                            href={`/sektor/${sector?.id}`}
                            class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary-dark transition-colors"
                        >
                            Lihat Semua Berita {sector?.name}
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </section>
        )}
    </main>
</SEOLayout>

<style>
    .prose h2 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-top: 2rem;
        margin-bottom: 1rem;
    }
    
    .prose h3 {
        font-size: 1.25rem;
        font-weight: 700;
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
    }
    
    .prose p {
        margin-bottom: 1rem;
        line-height: 1.625;
    }
    
    .prose ul, .prose ol {
        margin-bottom: 1rem;
        margin-left: 1.5rem;
    }
    
    .prose li {
        margin-bottom: 0.5rem;
    }
    
    .prose strong {
        font-weight: 600;
    }
    
    .prose a {
        color: #2563eb;
        text-decoration: underline;
    }
    
    .prose a:hover {
        text-decoration: none;
    }
    
    .prose blockquote {
        border-left: 4px solid #2563eb;
        padding-left: 1rem;
        font-style: italic;
        margin: 1.5rem 0;
    }
</style>