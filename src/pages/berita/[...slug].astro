---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import { getSectorById } from '@data/categories';
import Date from '@components/ui/Date.astro';
import StockSymbol from '@components/ui/StockSymbol.astro';
import NewsArticle from '@components/news/NewsArticle.astro';

export async function getStaticPaths() {
    const newsEntries = await getCollection('news', ({ data }) => {
        return import.meta.env.DEV || data.publish !== false;
    });

    return newsEntries.map(entry => ({
        params: { slug: entry.id },
        props: { entry }
    }));
}

interface Props {
    entry: CollectionEntry<'news'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const sector = getSectorById(entry.data.category);

// Get related articles from same sector
const relatedArticles = await getCollection('news', ({ data, id }) => {
    return (
        (import.meta.env.DEV || data.publish !== false) &&
        data.category === entry.data.category &&
        id !== entry.id
    );
});

const sortedRelated = relatedArticles
    .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
    .slice(0, 3);

const seoTitle = entry.data.seo?.title || `${entry.data.title} - Sahamindo`;
const seoDescription = entry.data.seo?.description || entry.data.excerpt;
---

<Layout title={seoTitle} description={seoDescription}>
    <main>
        <article class="site-container mx-auto px-4 py-base">
            {/* Breaking news banner */}
            {entry.data.isBreaking && (
                <div class="bg-red-600 text-white px-4 py-2 rounded-lg mb-6 text-center font-bold">
                    ðŸ”´ BREAKING NEWS
                </div>
            )}

            {/* Article header */}
            <header class="max-w-4xl mx-auto mb-8">
                <div class="flex items-center gap-4 mb-4 text-sm text-gray-600">
                    {sector && (
                        <span class="flex items-center gap-2 bg-blue-100 text-blue-800 px-3 py-1 rounded-full">
                            {sector.icon} {sector.name}
                        </span>
                    )}
                    <Date date={entry.data.publishDate} />
                    <span>â€¢</span>
                    <span class="font-medium">{entry.data.author}</span>
                </div>

                <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 leading-tight">
                    {entry.data.title}
                </h1>

                <p class="text-xl text-gray-600 leading-relaxed">
                    {entry.data.excerpt}
                </p>

                {/* Stock symbols */}
                {entry.data.stockSymbols && entry.data.stockSymbols.length > 0 && (
                    <div class="mt-6 p-4 bg-gray-50 rounded-lg">
                        <h3 class="font-semibold text-gray-700 mb-3">Saham Terkait:</h3>
                        <div class="flex flex-wrap gap-2">
                            {entry.data.stockSymbols.map((symbol) => (
                                <StockSymbol symbol={symbol} inline={false} />
                            ))}
                        </div>
                    </div>
                )}
            </header>

            {/* Featured image */}
            {entry.data.featuredImage && (
                <div class="max-w-4xl mx-auto mb-8">
                    <img 
                        src={entry.data.featuredImage} 
                        alt=""
                        class="w-full h-96 object-cover rounded-lg"
                    />
                </div>
            )}

            {/* Article content */}
            <div class="max-w-4xl mx-auto prose prose-lg prose-gray">
                <Content />
            </div>

            {/* Tags */}
            {entry.data.tags && entry.data.tags.length > 0 && (
                <div class="max-w-4xl mx-auto mt-8 pt-8 border-t">
                    <h3 class="font-semibold mb-3">Tags:</h3>
                    <div class="flex flex-wrap gap-2">
                        {entry.data.tags.map((tag) => (
                            <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm">
                                #{tag}
                            </span>
                        ))}
                    </div>
                </div>
            )}
        </article>

        {/* Related articles */}
        {sortedRelated.length > 0 && (
            <section class="bg-gray-50 py-16">
                <div class="site-container mx-auto px-4">
                    <h2 class="text-3xl font-bold text-center mb-12">
                        Artikel Terkait dari Sektor {sector?.name}
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        {sortedRelated.map((article, index) => (
                            <NewsArticle
                                title={article.data.title}
                                excerpt={article.data.excerpt}
                                featuredImage={article.data.featuredImage}
                                publishDate={article.data.publishDate}
                                author={article.data.author}
                                category={article.data.category}
                                stockSymbols={article.data.stockSymbols}
                                isBreaking={article.data.isBreaking}
                                slug={article.id}
                                index={index}
                            />
                        ))}
                    </div>
                    
                    <div class="text-center mt-8">
                        <a 
                            href={`/sektor/${sector?.slug}`}
                            class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary-dark transition-colors"
                        >
                            Lihat Semua Berita {sector?.name}
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </section>
        )}
    </main>
</Layout>

<style>
    .prose h2 {
        @apply text-2xl font-bold mt-8 mb-4;
    }
    
    .prose h3 {
        @apply text-xl font-bold mt-6 mb-3;
    }
    
    .prose p {
        @apply mb-4 leading-relaxed;
    }
    
    .prose ul, .prose ol {
        @apply mb-4 ml-6;
    }
    
    .prose li {
        @apply mb-2;
    }
    
    .prose strong {
        @apply font-semibold;
    }
    
    .prose a {
        @apply text-primary hover:underline;
    }
    
    .prose blockquote {
        @apply border-l-4 border-primary pl-4 italic my-6;
    }
</style>